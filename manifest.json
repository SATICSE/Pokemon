{

  "manifest_version": 2,
  "name": "Pokemon",
  "version": "1.0",

  "description": "Display Pokemon characters on screen!",

  "icons": {
    "48": "icons/pokemon.jpg"
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "browser_action": {
    "default_icon": "icons/pokemon.jpg",
    "theme_icons": [{
        "dark": "icons/pokemon.jpg",
        "size": 32
    }],
    "default_title": "Pokemon",
    "default_popup": "popup/pokemon.html"
  },

  "web_accessible_resources": [
    "pokemon/*.jpg",
    "pokemon/*.png"

  ],

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["pokemon.js"]
    }
  ]

}





  
}
