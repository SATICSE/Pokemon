{

  "manifest_version": 2,
  "name": "Pokemon",
  "version": "1.0",

  "description": "Display Pokemon characters on screen!",

  "background": {
    "scripts": ["pikachu/pika.js"]
  },
  
  "permissions": [
    "tabs",
    "activeTab"
  ],

  "browser_action": {
    "browser_style": true,
    "default_popup": "pikachu/pikachu.html",
    "default_icon": {
      "16": "icons/pikachu.png",
      "32": "icons/pikachu.png"
    }
  },

  "options_ui": {
    "page": "pikachu/pikachu.html",
    "browser_style": true
  },

  "content_scripts": [
    {
      "matches": ["*://*.org/*"],
      "js": ["pokemon.js"]
    }
  ]

}
