{

  "manifest_version": 2,
  "name": "Pokemon",
  "version": "1.0",

  "description": "Display Pokemon characters on screen!",

  "background": {
    "scripts": ["pikachu/pika.js"]
  },
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "browser_style": true,
    "default_popup": "pikachu/pikachu.html",
    "default_icon": {
      "16": "icons/pikachu.png",
      "32": "icons/pikachu.png"
    }
  },


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pokemon.js"]
    }
  ]

,

  "options_ui": {
    "page": "setting/options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}
